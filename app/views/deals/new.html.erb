<div class="d-flex flex-container justify-content-between align-items-center p-2 " style= "background: #3778c2;">
    <%= link_to category_path(@category.id) do %>
      <i class="fa fa-arrow-left" style="color: white; font-size: 1.5rem"></i>
    <% end %>
    <p class="p-3 m-auto" style="color: white">New Transaction for <%= @category.Name%></p>
    <nav class="navbar navbar-expand-lg navbar-dark bg-custom">
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo02" aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <li class="nav-item">
            <a class="nav-link" href=<%= categories_path %> >Categories</a>
          </li>
          <li>
            <div>
              <%= button_to 'Logout', destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
            </div>
          </li>
        </ul>
      </div>
    </nav>
  </div>
<%= form_with url: category_deals_path(@category), model: @deal, html: { class: 'form-horizontal p-5 w-50 w-100' } do |form| %>
  <div class="form-group">
    <%= form.label :name, class: 'control-label col-sm-2 bold-text' %>
    <div class="col-sm-10">
      <%= form.text_field :name, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= form.label :amount, class: 'control-label col-sm-2' %>
    <div class="col-sm-10">
      <%= form.number_field :amount, step: 0.01, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group p-2">
    <%= form.label :category_ids, "Add an extra category: (Optional)", class: 'control-label col-sm-2 mt-2' %>
    <div class="col-sm-10 p-2">
      <% @categories.each do |category| %>
        <div class="form-check">
          <%= form.check_box :category_ids, { multiple: true, class: 'form-check-input' }, category.id, nil %>
          <%= form.label :category_ids, category.Name, value: category.id, class: 'form-check-label' %>
        </div>
      <% end %>
    </div>
  </div>  
  <div class="actions d-flex justify-content-center align-items-center mb-3">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit "New", class: 'btn btn-primary bg-custom' %>
    </div>
  </div>
<% end %>