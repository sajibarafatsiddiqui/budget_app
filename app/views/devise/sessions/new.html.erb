
<%= form_for(resource, as: resource_name, url: user_session_path(resource_name)) do |f| %>
<div class="d-flex flex-container justify-content-between align-items-center p-2 " style= "background: #3778c2;">
<%= link_to(:back) do %>
<i class="fa fa-arrow-left" style="color: white; font-size: 1.5rem"></i>
<% end %>
<p class="p-3 m-auto" style="color: white">LOGIN</p>
  <div class="action">
    <%= f.submit "Log In", class:"btn btn-link text-decoration-none", style:"color: white"%>
  </div>
</div>
  <div class="form-row">
  <div class="mt-2">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class:"form-control" %>
  </div>

<div class="col">
    <%= f.password_field :password, autocomplete: "new-password" ,class:"form-control", placeholder:"Password"%>
  </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
