
<%= form_for(resource, as: resource_name, url: user_registration_path(resource_name)) do |f| %>
<div class="d-flex align-items-center justify-content-between p-2" style= "background: #3778c2;">
<%= link_to(:back) do %>
<i class="fa fa-arrow-left" style="color: white"></i>
<% end %>
<p class="mt-3" style="color: white">REGISTER</p>
  <div class="actions">
    <%= f.submit "Next", class:"btn btn-link text-decoration-none", style:"color: white"%>
  </div>
</div>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-row">
   <div class="col">
    <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:"Full Name", class:"form-control" %>
  </div>
  <div class="col">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class:"form-control" %>
  </div>

<div class="col">
    <%= f.password_field :password, autocomplete: "new-password" ,class:"form-control", placeholder:"Password"%>
  </div>
  </div>
<% end %>

